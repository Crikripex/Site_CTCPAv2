{% block body %}
    <div class="container text-center">
        <br>
        <div class="page-title">
            <h1>Actualités</h1>
        </div>
        <div id="demo" class="carousel slide" data-ride="carousel" ><!--style="height: 15rem;"-->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>
            <div class="carousel-inner">
                {% for value in 0..CarouselSize %}
                    {% if Carousel[value] == Carousel[0]  %}
                        <div class="carousel-item active">
                            <img src="http://www.columbia.edu/~rna2113/img/Chemistry-1920x960.jpg" alt="{{ Carousel[value].titleFR }}" width="100%" height="300">
                            <div class="carousel-caption" style="color: black">
                                <h3>{{ Carousel[value].titleFR }}</h3>
                                <p>{{ descCarousel[value] }}</p>
                                <a href="#" class="btn btn-primary" data-toggle="collapse" data-target="#top{{ value }}">Lire plus</a>
                            </div>
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img src="http://www.magazineb2b.com/wp-content/uploads/sites/9/2017/07/laboratoire-pharma.jpg" alt="{{ Carousel[value].titleFR }}" width="100%" height="300">
                            <div class="carousel-caption" style="color: darkslategray">
                                <h3>{{ Carousel[value].titleFR }}</h3>
                                <p>{{ descCarousel[value] }}</p>
                                <a href="#" class="btn btn-primary" data-toggle="collapse" data-target="#top{{ value }}">Lire plus</a>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
        <br>
        {% for value in 0..CarouselSize %}
        <div class="card mb-3 text-left news-item collapse" id="top{{ value }}">
            <div class="row">
                <div class="text-center col-3">
                    <img class="img-fluid" style="max-height: 200px;" src="http://sandermechanical.com/wp-content/uploads/2015/05/Laboratory.jpg" alt="image">
                </div>
                <div class="card-body col-md-9">
                    <h5 class="card-title">{{ Carousel[value].titleFR }}</h5>
                    <h6 class="card-subtitle text-muted">{{ Carousel[value].date.format('Y-m-d | H:i:s') }}</h6>
                    <p class="card-text">
                        {{ Carousel[value].contentFR }}
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}

        <!-- Actualités en dehors du carousel -->
        {% for value in 0..ListSize %}
        <a href="#" class="card mb-3 text-left news-item" data-toggle="collapse" data-target="#1_article{{ value }},#2_article{{ value }}">
            <div class="row">
                <div class="text-center col-3">
                    <img class="img-fluid" style="max-height: 200px;" src="http://sandermechanical.com/wp-content/uploads/2015/05/Laboratory.jpg" alt="image">
                </div>
                <div class="card-body col-md-9">
                    <h5 class="card-title">{{ List[value].titleFR }}</h5>
                    <h6 class="card-subtitle text-muted">{{ List[value].date.format('Y-m-d | H:i:s') }}</h6>
                    <div class="collapse show" id="1_article{{ value }}">
                        <p class="card-text">{{ descList[value] }}</p>
                    </div>
                    <div class="collapse" id="2_article{{ value }}">
                        <p class="card-text">
                            {{ List[value].contentFR }}
                        </p>
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}

    </div>
{% endblock %}